@{ ViewBag.Title = "Home Page"; }

<style type="text/css">
    .container {
        width: 1170px;
        max-height: -webkit-fill-available;
    }

    h3 {
        text-align: center;
        font-size: 25px;
        margin: 0;
        padding-top: 3px;
    }

    a {
        text-decoration: none;
    }

    .gallery {
        margin-top: 12px;
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        justify-content: center;
        align-items: center;
    }

    .content {
        width: 21%;
        margin: 15px;
        box-sizing: border-box;
        float: left;
        text-align: center;
        border-radius: 10px;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        /* padding-top: 10px; */
        box-shadow: 0 0 10px rgb(0 0 0 / 10%);
        transition: 0.4s;
        border: 1px solid darkgrey;
    }

        .content:hover {
            box-shadow: 0 0 11px rgba(33, 33, 33, .2);
            transform: translate(0px, -8px);
            transition: 0.6s;
        }

    img {
        width: 180px;
        height: 159px;
        text-align: center;
        margin: 0 auto;
        display: block;
    }

    p {
        text-align: center;
        /* color: #b2bec3; */
        /* padding: 0 8px; */
    }

    h6 {
        font-size: 22px;
        text-align: center;
        /* color: #222f3e; */
        margin: 0;
    }

    ul {
        list-style-type: none;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0px;
    }

    li {
        padding: 5px;
    }

    .fa {
        color: #ff9f43;
        font-size: 26px;
        transition: 0.4s;
    }

        .fa:hover {
            transform: scale(1.3);
            transition: 0.6s;
        }

    button {
        text-align: center;
        font-size: 24px;
        color: #fff;
        width: 100%;
        padding: 15px;
        border: 0px;
        outline: none;
        cursor: pointer;
        margin-top: 5px;
        border-bottom-right-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    .buy-1 {
        background-color: #2183a2;
    }

    .buy-2 {
        background-color: #3b3e6e;
    }

    .buy-3 {
        background-color: #0b0b0b;
    }
</style>
<form action="/Home/Category" method="get" id="category" class="option">
    <div style=" margin-top: 16px; ">
        <label style="float: left; margin-right: 17px; margin-top: 6px;">Filter</label>
        <select id="catName" class="form-control" name="catName" onchange="$('#category').submit()">
            <option>-- Select --</option>
            <option value="">All</option>
            <option value="Indian">Indian</option>
            <option value="American">American</option>
            <option value="UK">UK</option>
            <option value="Chinese">Chinese</option>
        </select>
    </div>
</form>
@if (ViewBag.Products.Count == 0)
{
<br />
                <div id="EmptyDataMsg" class="alert alert-info">
                    <strong>Welcome!</strong> Our shop is currently empty.
                </div> }
                            else
                            {
                <div class="gallery">
                    @foreach (var item in ViewBag.Products)
                    {
                        var imagePath = item.PName;
    <div class="content">
        <img src="@String.Format("{0}{1}.jpg",Url.Content("~/Images/Products/"), item.PName)">
        <h3>@item.PName</h3>
        <p>
            <h3>@item.Description</h3>
            <span class="p-unit">
                @item.UnitsInStock
                @if (item.UnitsInStock > 1)
                {
<text>Units</text> }
else
{
<text>Unit</text>}
            </span>
        </p>
        <h6>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-GB"), "{0:c}", item.UnitPrice)</h6>
        <button class="buy-2">@Html.ActionLink("Add to Cart", "AddToCart", "Home", new { id = item.PID }, null)</button>
    </div>}
                </div>}

